<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Board"
        android:id="@+id/addButton"
        android:layout_below="@+id/fileprintbutton"
        android:layout_alignParentEnd="true"
        android:layout_margin="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear All\n Boards"
        android:id="@+id/clearButton"
        android:layout_below="@+id/boardcountbutton"
        android:layout_alignParentStart="true"
        android:layout_margin="35dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="how many"
        android:id="@+id/boardcountbutton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="print file"
        android:id="@+id/fileprintbutton"
        android:visibility="gone"
        android:layout_below="@+id/boardcountbutton"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/printEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/fileprintbutton"
        android:text="none"
        android:visibility="gone" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boardsListView"
        android:fastScrollAlwaysVisible="false"
        android:layout_below="@+id/addButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Called\nValues"
        android:id="@+id/resetButton"
        android:layout_alignTop="@+id/addButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout><!-- From: file:/Users/wml/Desktop/Android%20Projects/BingoSolver/app/src/main/res/layout/fragment_tab_fragment1.xml -->